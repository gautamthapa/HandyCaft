<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"

  android:orientation="vertical"
  tools:context=".ProductFragments.ProductDescFragment">

  <LinearLayout
    android:padding="10dp"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="3dp">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                android:id="@+id/imageViewProductImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
              <ImageButton
                android:id="@+id/imageButtonWishList"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imageButtonShare"
                android:layout_alignBottom="@+id/imageViewProductImage"
                android:background="@drawable/ic_favorite_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imageButtonShare"
                android:layout_marginEnd="5dp"/>
              <ImageButton
                android:id="@+id/imageButtonShare"
                android:layout_alignRight="@+id/imageViewProductImage"
                android:layout_alignBottom="@+id/imageViewProductImage"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageViewProductImage"/>
            </RelativeLayout>

            <TextView
              android:id="@+id/textViewProductName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/app_name"/>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                android:id="@+id/textViewProductSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1000"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
              <TextView
                android:id="@+id/textViewProductMRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Rs. 2000"
                android:textSize="18sp"/>
              <TextView
                android:id="@+id/textViewProductDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="50% off"
                android:textColor="#328115"
                android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <RatingBar
                android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="4"/>
              <TextView
                android:id="@+id/reviews"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Reviews"
                android:textSize="18sp"/>
            </LinearLayout>

          </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          app:cardElevation="3dp"
          android:layout_height="wrap_content">
          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
              android:textColor="@android:color/black"
              android:text="Key Highlights"
              android:textSize="18sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

            <TextView
              android:id="@+id/textViewProductHighlights"
              android:textSize="16sp"
              android:text="@string/demo_desc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <!--<ExpandableListView-->
            <!--tools:listitem="1"-->
            <!--android:visibility="gone"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<TextView-->
            <!--android:text="Full Details"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->
            <!--</ExpandableListView>-->
            <TextView
              android:textColor="@android:color/black"
              android:textSize="18sp"
              android:text="Full Details"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <TextView
              android:id="@+id/textViewProductDetails"
              android:textSize="16sp"
              android:text="@string/demo_desc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          </LinearLayout>
        </android.support.v7.widget.CardView>
      </LinearLayout>
    </ScrollView>
  </LinearLayout>
  <LinearLayout
    android:layout_weight="0.08"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <Button
      android:visibility="visible"
      android:id="@+id/buttonAddToCartItem"
      android:text="Add To Cart"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
    <Button
      android:visibility='gone'
      android:id="@+id/buttonGoToCartItem"
      android:text="Go To Cart"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
    <Button
      android:id="@+id/buttonBuyProduct"
      android:text="Buy"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>
</LinearLayout>