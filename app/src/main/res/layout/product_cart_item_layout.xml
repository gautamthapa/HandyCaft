<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<LinearLayout
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <LinearLayout
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_marginRight="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/imageViewProductImage"
        android:src="@drawable/google_logo"
        android:layout_width="150dp"
        android:layout_height="180dp"/>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/textViewProductName"
        android:text="HandiCraft Product"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView
        android:layout_marginTop="5dp"
        android:text="Sold By Imgautam"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/textViewProductStock"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/holo_red_light"
        android:text="Only 3 units in stock"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:id="@+id/textViewProductTotalAmt"
          android:layout_marginTop="10dp"
          android:textColor="@android:color/black"
          android:textSize="20dp"
          android:text="Rs. 20000"
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_height="wrap_content"/>
        <Spinner
          android:id="@+id/spinnerQuantity"
          android:paddingRight="5dp"
          android:layout_weight="1"
          android:layout_marginTop="10dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content">
        </Spinner>
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:id="@+id/buttonRemoveCartItem"
      android:text="Remove"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
    <Button
      android:id="@+id/buttonMoveToWishListCartItem"
      android:text="Move to Wishlist"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>